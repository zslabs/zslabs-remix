{
  "private": true,
  "name": "zslabs-remix",
  "description": "Portfolio site for Zach Schnackel; built with Remix",
  "license": "MIT",
  "browserslist": [
    ">5%",
    "not IE 11",
    "not dead",
    "not op_mini all"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:copy && remix build",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "build:copy": "cp -r ./app/posts ./public/posts",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type:check": "tsc --project tsconfig.json --pretty --noEmit",
    "postinstall": "remix setup node",
    "prepare": "husky install"
  },
  "dependencies": {
    "@netlify/classnames-template-literals": "1.0.3",
    "@remix-run/react": "1.1.1",
    "@remix-run/serve": "1.1.1",
    "@remix-run/vercel": "1.1.1",
    "cssnano": "5.0.15",
    "framer-motion": "5.6.0",
    "mdx-bundler": "8.0.1",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "remix": "1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.1.1",
    "@tailwindcss/line-clamp": "0.3.1",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "autoprefixer": "10.4.2",
    "concurrently": "7.0.0",
    "eslint": "8.7.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "lint-staged": "12.2.0",
    "postcss": "8.4.5",
    "postcss-cli": "9.1.0",
    "postcss-import": "14.0.2",
    "tailwindcss": "3.0.15",
    "typescript": "4.5.4"
  },
  "engines": {
    "node": "14.x"
  },
  "sideEffects": false
}
